# Environment Variables Template
# Copy this file to .env and replace with your actual API keys
# Never commit .env to version control!

# ================================
# API KEYS
# ================================

# OpenAI API Key for GPT-4o scene parsing and DALLÂ·E 3 image generation
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# fal.ai API Key for Veo 3 video generation  
# Get your API key from: https://fal.ai/dashboard
FAL_API_KEY=your_fal_api_key_here

# ================================
# APPLICATION SETTINGS
# ================================

# Default budget for video generation (in USD)
DEFAULT_VIDEO_BUDGET=50.0

# Maximum number of scenes to process
MAX_SCENES=10

# Output directory for generated assets
ASSETS_DIR=src/assets

# ================================
# DEVELOPMENT SETTINGS
# ================================

# Enable debug mode
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Development mode (enables additional logging)
DEVELOPMENT_MODE=false 